<Window x:Class="AntivirusScanner.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TrueSight" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White"
        ResizeMode="CanResize">

        <Window.Resources>
            <Style x:Key="NavButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#CCCCCC"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3E3E42"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#007ACC" Offset="0.0"/>
                            <GradientStop Color="#005A9E" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#333333" BorderThickness="0,0,1,0">
            <StackPanel Margin="10,20,10,0">
                <TextBlock Text="ðŸ›¡ï¸ TRUESIGHT AV" FontSize="18" FontWeight="Bold" Foreground="#00FFFF" Margin="10,0,0,30"/>

                <Button Content="ðŸ    Dashboard" Style="{StaticResource NavButton}" Click="BtnDashboard_Click"/>
                <Button Content="âš™ï¸   Settings" Style="{StaticResource NavButton}" Click="BtnSettings_Click"/>
                <Button Content="ðŸ“œ   History" Style="{StaticResource NavButton}" Click="BtnHistory_Click"/>
                
                <Separator Background="#444444" Margin="10,20"/>
                
                <TextBlock Text="STATUS" Foreground="#666666" FontSize="12" Margin="10,0,0,5"/>
                <TextBlock x:Name="TxtStatusSidebar" Text="ðŸŸ¢ Protected" Foreground="#00FF00" Margin="10,0,0,0"/>

                <!-- BotÃ³n eliminar para ahorrar espacio
                <StackPanel VerticalAlignment="Bottom" Margin="0,200,0,0">
                     <Button Content="âŒ   Close App" Style="{StaticResource NavButton}" Click="BtnExit_Click" Foreground="#FF5555"/>
                </StackPanel>
                -->
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="#1E1E1E">
            <Grid>
                 <!-- DASHBOARD VIEW converted to Grid for better resizing -->
                <Grid x:Name="ViewDashboard" Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Icon -->
                        <RowDefinition Height="Auto"/> <!-- Text -->
                        <RowDefinition Height="Auto"/> <!-- Controls -->
                        <RowDefinition Height="*"/>    <!-- Log (Fills rest) -->
                    </Grid.RowDefinitions>

                    <!-- Status Circle -->
                    <Border Grid.Row="0" Width="150" Height="150" CornerRadius="100" BorderThickness="2" BorderBrush="#00FF00" HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                             <TextBlock Text="ðŸ›¡ï¸" FontSize="50" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="System Protected" FontSize="28" FontWeight="Light" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock x:Name="TxtLastScan" Text="Last scan: Never" FontSize="14" Foreground="#888888" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,30,0,20">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                             <TextBlock Text="Real-time Protection:" VerticalAlignment="Center" Margin="0,0,20,0"/>
                             <ToggleButton x:Name="ToggleMonitor" Content="ON/OFF" Width="50" Click="ToggleMonitor_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="SCAN ALL NOW" Width="200" Height="40" Style="{StaticResource ActionButton}" Click="BtnScanNow_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="3" Background="#252526" CornerRadius="10" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Recent Activity" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="TxtRecentLog" Text="Waiting for activity..." Foreground="#AAAAAA" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>

                <!-- SETTINGS VIEW -->
                <StackPanel x:Name="ViewSettings" Margin="40" Visibility="Collapsed">
                    <TextBlock Text="Settings" FontSize="24" Margin="0,0,0,20"/>

                    <TextBlock Text="Watch Folder" Foreground="#AAAAAA" Margin="0,10,0,5"/>
                    <TextBox x:Name="InputFolder" Height="30" Padding="5"/>
                    
                    <TextBlock Text="VirusTotal API Key" Foreground="#AAAAAA" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="InputApiKey" Height="30" Padding="5"/>

                    <CheckBox x:Name="CheckStartOnBoot" Content="Start with Windows" Margin="0,20,0,5" Foreground="White"/>
                    <CheckBox x:Name="CheckStartMinimized" Content="Start Minimized" Margin="0,5,0,20" Foreground="White"/>

                    <Button Content="SAVE CHANGES" Width="150" HorizontalAlignment="Left" Style="{StaticResource ActionButton}" Click="BtnSaveSettings_Click"/>
                </StackPanel>

                <!-- HISTORY VIEW -->
                <StackPanel x:Name="ViewHistory" Margin="40" Visibility="Collapsed">
                     <TextBlock Text="Threat History" FontSize="24" Margin="0,0,0,20"/>
                     <ListBox x:Name="ListHistory" Background="#252526" BorderThickness="0" Foreground="#CCCCCC" Height="400"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
